{
  "name": "titanos-automation",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "report:html": "playwright show-report",
    "clean:allure": "rimraf allure-results allure-report || true",
    "test:allure": "npm run clean:allure && playwright test --reporter=line,allure-playwright",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "open:allure": "allure open allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "allure-commandline": "^2.29.0",
    "allure-playwright": "^2.15.0",
    "dotenv": "^16.4.5",
    "rimraf": "^5.0.5"
  }
}